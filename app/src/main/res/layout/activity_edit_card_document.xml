<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditCardDocument">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tooll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:title="Edit Car Document">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tooll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Uplaod Car Registration image"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/imgcam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/txtreg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="280dp"
        android:src="@drawable/cam"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/savecar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgcam"
        android:text="Continue"
        android:layout_marginTop="20dp"
        android:background="@drawable/name_bck"/>
</androidx.constraintlayout.widget.ConstraintLayout>